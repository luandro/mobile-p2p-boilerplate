{
  "name": "p2pboilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lib": "tsc",
    "prepare": "patch-package",
    "build-rnnodeapp": "./tools/build-rnnodeapp",
    "propagate-replacements": "propagate-replacement-fields --field=react-native",
    "start": "npm run propagate-replacements && node node_modules/react-native/local-cli/cli.js start",
    "android": "react-native run-android",
    "dev": "npm run cleanup && propagate-replacements && npm run build-rnnodeapp && npm run android",
    "test": "jest",
    "clean-up-bundler": "watchman watch-del-all && rm -rf $TMPDIR/react-*"
  },
  "dependencies": {
    "@staltz/react-native-os": "^1.2.0",
    "multiserver": "^1.10.1",
    "react": "16.3.0-alpha.1",
    "react-native": "0.54.0",
    "react-native-node": "^3.3.1",
    "react-native-ssb-client": "^4.0.0",
    "react-native-ssb-client-keys": "^1.1.0",
    "react-native-ssb-shims": "^2.0.0",
    "spawn-sync": "^1.0.15",
    "ssb-ref": "^2.9.1",
    "thread-sleep": "^2.0.0",
    "utf-8-validate": "^4.0.0"
  },
  "devDependencies": {
    "babel-jest": "22.4.1",
    "babel-preset-react-native": "4.0.0",
    "jest": "22.4.2",
    "noderify": "^3.0.2",
    "patch-package": "^5.1.1",
    "prettier": "^1.11.1",
    "propagate-replacement-fields": "^1.2.0",
    "react-test-renderer": "16.3.0-alpha.1",
    "try-thread-sleep": "^1.0.2"
  },
  "jest": {
    "preset": "react-native"
  },
  "react-native": {
    "os": "@staltz/react-native-os",
    "react-native-os": "@staltz/react-native-os",
    "rn-viewpager": "@staltz/rn-viewpager",
    "ssb-client": "react-native-ssb-client"
  }
}
